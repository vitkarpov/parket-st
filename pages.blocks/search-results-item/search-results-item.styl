.search-results-item
  display: block
  padding-top: 24px
  padding-bottom: @padding-top

  &:after
    content: ''
    display: block
    clear: both

  &__preview
    float: left

    img
      display: block
      max-width: 100%
      height: auto

  &__caption
    margin-bottom: 12px
    font-size: 16px

  &__props
    color: #777
    font-size: 13px
