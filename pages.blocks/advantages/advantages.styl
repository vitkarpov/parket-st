.advantages

  &__caption
    font-weight: bold
    font-size: 22px
    line-height: 26px
    margin-bottom: 24px

  &__items
    display: flex
    justify-content: space-between

    @media phone
      display: block
      margin-top: -30px

  &__item
    box-sizing: border-box
    position: relative
    display: inline-block
    vertical-align: top
    width: 25%
    padding: 80px 20px 0 0

    @media phone
      width: 50%
      margin-top: 30px

    &:before
      content: ''
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 80px
      background-position: left center
      background-repeat: no-repeat

    &_icon_options:before
      background-image: url('options.svg')

    &_icon_prices:before
      background-image: url('prices.png')

    &_icon_consult:before
      background-image: url('consult.svg')

    &_icon_delivery:before
      background-image: url('delivery.png')

  &__item-caption
    font-weight: bold
    font-size: 16px
    line-height: 21px
    margin-top: 12px

  &__text
    margin: 5px 0
    line-height: 18px
