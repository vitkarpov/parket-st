.cart-preview
  white-space: nowrap

  &_has-items
    cursor: pointer

  &__icon
    position: relative
    display: inline-block
    vertical-align: top
    margin-top: -2px

  &__icon:after
    content: attr(data-count)
    display: inline-block
    vertical-align: bottom
    box-sizing: border-box

    overflow: hidden
    width: 0
    height: 0
    background-color: #8a553b

    color: white
    font-size: 12px
    line-height: 20px
    text-align: center

    border-radius: 50%
    margin-left: -16px
    margin-right: 6px

    transform: scale(0);
    transition: transform 0.5s ease-in-out

  &_has-items &__icon[data-count]:after
    width: 20px
    height: 20px
    transform: scale(1)

  &__price
    display: inline-block
    opacity: 0
    transition: opacity 0.3s ease
    transition-delay: 0.3s

  &_has-items &__price
    opacity: 1

  &__price-i
    display: inline-block
    transition: max-width 0.5s ease
    max-width: 0

  &_has-items &__price-i
    max-width: 100px

  .rub
    margin-left: 4px
    display: none

  &_has-items .rub
    display: inline-block
