.faq-form
  padding: 20px 30px
  width: 600px
  box-sizing: border-box

  &__caption
    font-size: 18px
    line-height: 24px
    font-weight: bold

  &__item .order-label-group
    margin-right: 0

  &__footer
    margin: 30px 0 10px 0

    &:after
      content: ''
      display: block
      clear: both

  &__submit
    float: right
