.nav-footer
  background: url('bg.jpg') center center no-repeat
  background-size: cover
  margin-top: 20px

  &__content
    position: relative
    width: 960px
    padding: 15px 0 30px 0
    margin: 0 auto
    font-size: 0

  &__sub
    max-height: 600px
    overflow: hidden
    transition: max-height 0.4s linear
    column-count: 5

    .nav-footer_contacted &
      max-height: 0

  &__item
    display: inline-block
    font-size: 14px

    box-sizing: border-box
    padding-right: 10px

    .nav-footer__main &
      width: 20%

    .nav-footer__sub &
      width: 100%

  &__caption
    padding: 20px 0 8px 0
    font-weight: bold

  &__brand
    font-size: 13px
    margin: 5px 0

  &__arrow
    position: absolute
    left: 50%
    margin-left: -20px
    top: -20px

    width: 40px
    height: @width
    border-radius: 50%
    background: white

    line-height: 40px
    text-align: center
    cursor: pointer

    transform: rotate(0)
    transition: transform 0.2s linear

    .nav-footer_contacted &
      transform: rotate(180deg)

    .icon
      vertical-align: middle
