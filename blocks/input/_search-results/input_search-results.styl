.input

  &_search-results
    display: block
    background-color: white
    border: 1px solid lightgrey
    border-radius: 3px

  &_search-results &__box
    display: block

  &_search-results &__control
    box-sizing: border-box
    width: 100%
    padding: 12px 12px 12px 50px
    background: url('bg.svg') 12px 12px no-repeat
    border: 0
    color: #828077
    font-size: 18px
    line-height: 21px
