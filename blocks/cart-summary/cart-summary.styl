.cart-summary
  padding: 30px 50px 30px 80px
  background: #f7f5f2 url('bg.svg') 30px 40px no-repeat

  &__content
    display: flex
    justify-content: space-between

  &__item
    display: inline-block
    width: 50%
    overflow: hidden

  &__caption
    font-size: 16px
    line-height: 23px
    margin-bottom: 8px

  &__text
    font-size: 13px
    line-height: 16px

  &__info
    overflow: hidden
    margin-bottom: 4px

  &__info-i
    position: relative
    float: right
    width: 180px

    &:after
      content: ''
      display: block
      clear: both

  &__info-caption
    position: absolute
    right: 100%
    width: 100%
    bottom: 2px
    margin-right: 40px
    text-align: right

  &__info_price
    font-size: 16px
    font-size: 27px
    line-height: 32px

  &__info_price &__info-caption
    font-size: 16px
    line-height: 23px

