.about
  margin: 40px 0

  &:after
    content: ''
    display: block
    clear: both

  &__caption
    color: #8a553b
    font-size: 24px
    line-height: 33px
    margin-bottom: 20px

  &__content
    margin: 16px 0
    line-height: 20px

  &__image
    box-sizing: border-box
    width: 100%

    img
      max-width: 100%
      height: auto

  &_img_right
    padding-right: 50%

  &_img_right &__content
    margin-right: 50px

  &_img_right &__image
    float: right
    margin-right: -100%
    padding-left: 50px

  &_img_left
    padding-left: 50%

  &_img_left &__content
    margin-left: 50px

  &_img_left &__image
    float: left
    margin-left: -100%
    padding-right: 50px

.page__caption + .about .about__image
  margin-top: -85px
