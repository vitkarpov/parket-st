.order
  padding-left: 560px
  margin: 24px 0

  &:after
    content: ''
    display: block
    clear: both

  &__left
    box-sizing: border-box
    float: left
    width: 540px
    margin-left: -560px

  &__right
  &__left
    background: white
    padding: 20px

  &__section
    border-top: 1px solid #ebebeb

    &:first-child
      border-top: 0

  &__caption
    font-size: 22px
    line-height: 26px
    margin: 20px 0

  &__section:first-child &__caption
    margin-top: 0
