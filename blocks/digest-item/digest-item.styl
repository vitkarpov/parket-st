.digest-item
  position: relative
  display: inline-block
  vertical-align: top
  width: 295px
  padding: 155px 0 25px 0
  margin: 10px

  &:hover
    text-decoration: none

  &:before
    content: ''
    position: absolute
    left: 0
    top: 0
    width: 295px
    height: 155px
    background-repeat: no-repeat
    border-radius: 3px
    box-shadow: 0px 8px 25px 0px rgba(0, 0, 0, 0.2);

  for n in 0..4
    &_type_{n}:before
      background-image: url('bg-' + n + '.png')

  &_type_2:before
    width: 255px

  &__caption
    margin-top: 20px
    font-size: 16px
    max-height: 40px
    overflow: hidden

  &__price
    color: #bdbdbd
    font-size: 15px
    margin-top: 4px
