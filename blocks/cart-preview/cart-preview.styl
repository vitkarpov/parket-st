.cart-preview
  cursor: pointer

  &__icon
    position: relative
    display: inline-block
    vertical-align: top
    margin-right: 10px
    margin-top: -2px

    .icon
      margin-right: 6px

    &:before
      content: attr(data-count)
      min-width: 12px
      padding: 0 4px
      height: 20px
      background-color: #8a553b
      color: white
      font-size: 12px
      line-height: 20px
      text-align: center
      border-radius: 50%

      position: absolute
      right: 0
      top: 8px
