.catalog-item

  &__content
    position: relative
    margin: 10px
    z-index: 0

    &:before
      content: ''
      display: none
      position: absolute
      left: -16px
      top: @left
      right: @left
      bottom: @left
      z-index: -1
      box-shadow: 0 4px 12px rgba(0, 0, 0, .2)

    .catalog-item:hover &:before
      display: block

    .catalog-item:hover &
      z-index: 1

  &__preview
    position: relative
    padding-top: 100%

    img
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: auto

  &__caption
    margin: 8px 0
    line-height: 1.4
    max-height: 2.8em
    overflow: hidden
    text-overflow: ellipsis

  &_big &__caption
    font-size: 18px

  &__prices
    font-size: 15px
    height: 15px
    font-weight: 500
    margin: 12px 0

  &_old-price &__prices
    height: 25px
    padding-top: 20px
    margin-top: 0

  &:hover &__main-prices
    visibility: hidden

  &__current
    display: inline-block

  &_old-price &__current
    font-size: 21px
    line-height: 25px

  &__old
    display: inline-block
    vertical-align: top
    position: relative
    top: -16px
    margin-left: 4px
    font-size: 15px
    line-height: 20px
    text-decoration: line-through

  &__extra
    display: none
    position: absolute
    top: 100%
    left: -16px
    right: @left
    padding: 0 16px 16px 16px
    z-index: 1
    box-shadow: 0 4px 22px rgba(0, 0, 0, .2)
    background: white

    &:before
      content: ''
      position: absolute
      left: 0
      right: 0
      bottom: 100%
      height: 8px
      background: white

    .catalog-item:hover &
      display: block

  &__extra-i
    position: relative
    margin-top: -15px

  &_old-price &__extra-i
    margin-top: -45px

  &__button
    width: 100%

  &__link
    display: block
