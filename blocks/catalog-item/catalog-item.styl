.catalog-item

  &__content
    position: relative
    margin: 10px
    z-index: 0

    &:before
      content: ''
      display: none
      position: absolute
      left: -10px
      top: -10px
      right: -10px
      bottom: -10px
      z-index: -1
      box-shadow: 0 4px 12px rgba(0, 0, 0, .2)

    .catalog-item:hover &:before
      display: block

    .catalog-item:hover &
      z-index: 1

  &__preview
    position: relative
    padding-top: 100%

    img
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: auto

  &__caption
    margin: 8px 0
    line-height: 18px

  &__prices
    font-weight: 500
    height: 25px
    padding-top: 20px

  &:hover &__main-prices
    visibility: hidden

  &__current
    display: inline-block
    font-size: 21px
    line-height: 25px

  &__old
    display: inline-block
    vertical-align: top
    position: relative
    top: -10px
    margin-left: 4px
    font-size: 15px
    line-height: 20px
    text-decoration: line-through

  &__extra
    display: none
    position: absolute
    top: 100%
    left: -10px
    right: -10px
    padding: 0 10px 10px 10px
    z-index: 1
    box-shadow: 0 4px 22px rgba(0, 0, 0, .2)
    background: white

    &:before
      content: ''
      position: absolute
      left: 0
      right: 0
      bottom: 100%
      height: 8px
      background: white

    .catalog-item:hover &
      display: block

  &__extra-i
    position: relative
    margin-top: -45px
