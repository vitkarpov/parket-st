.nav-footer
  background: url('bg.jpg') center center no-repeat
  background-size: cover
  margin-top: 20px

  @media phone
    background: none
    border-top: 1px solid lightgray

  &__content
    position: relative
    padding: 15px 20px 30px 20px
    margin: 0 auto
    font-size: 0

    @media desktop
      width: 940px

    @media phone
      padding-bottom: 15px

  &__caption
    padding: 20px 0 8px 0
    font-weight: bold

    @media phone
      padding: 0
      font-weight: normal
      font-size: 13px
      padding: 8px 16px 0 0

  .nav-footer_contracted &__catalog
    max-height: 0

  &__catalog
    @media phone
      display: none

  &__item
    display: inline-block
    font-size: 14px

    box-sizing: border-box
    padding-right: 10px
    width: 20%

    @media phone
      width: auto
      padding: 0

  &__arrow
    position: absolute
    left: 50%
    margin-left: -20px
    top: -20px

    width: 40px
    height: @width
    border-radius: 50%
    background: white

    line-height: 40px
    text-align: center
    cursor: pointer

    transform: rotate(180deg)
    transition: transform 0.2s linear

    @media phone
      display: none

    .nav-footer_contracted &
      transform: rotate(0)

    .icon
      vertical-align: middle
