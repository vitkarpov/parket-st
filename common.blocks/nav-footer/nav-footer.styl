.nav-footer
  background: url('bg.jpg') center center no-repeat
  background-size: cover
  margin-top: 20px

  &__content
    position: relative
    width: 960px
    padding: 15px 0 30px 0
    margin: 0 auto
    font-size: 0

  &__caption
    padding: 20px 0 8px 0
    font-weight: bold

  .nav-footer_contracted &__catalog
    max-height: 0

  &__item
    display: inline-block
    font-size: 14px

    box-sizing: border-box
    padding-right: 10px
    width: 20%

  &__arrow
    position: absolute
    left: 50%
    margin-left: -20px
    top: -20px

    width: 40px
    height: @width
    border-radius: 50%
    background: white

    line-height: 40px
    text-align: center
    cursor: pointer

    transform: rotate(0)
    transition: transform 0.2s linear

    .nav-footer_contracted &
      transform: rotate(180deg)

    .icon
      vertical-align: middle
