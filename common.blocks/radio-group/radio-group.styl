.radio-group

  .button
    border: 2px solid #cecece
    color: #989898

    font-family: Ubuntu
    font-size: 14px

    border-radius: 0
    padding: 6px
    background: white
    outline: none

    cursor: pointer
    transition: border-color 0.2s ease

    &:hover
      color: #8a553b

    &_checked
      border-color: #8a553b
      color: #8a553b
      cursor: default

  .radio + .radio
    margin-left: -2px

  .radio_checked
    z-index: 1

