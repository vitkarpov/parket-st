.main-content
  padding: 30px 0

  @media phone
    padding: 0

  &_order-done
  &_order
    background-color: #f7f7f7
    border-bottom: 1px solid #e0e0e0

  &__wrapper:after
    content: ''
    display: table
    width: 100%

  &__aside
    float: left
    width: 220px
    padding-right: 20px

    @media phone
      display: none

  &__content
    margin-left: 240px

    @media phone
      margin: 0

  &__wrapper_aside-right &__aside
    float: right
    padding-right: 0
    padding-left: 20px

  &__wrapper_aside-right &__content
    margin-left: 0
    margin-right: 240px

  &__select
    margin-top: 10px
    float: right

    & + .page__caption
      margin-right: 30%

  &__found
    vertical-align: middle
    color: #666
    font-size: 12px
    line-height: 14px
    font-weight: normal
    margin-left: 14px
