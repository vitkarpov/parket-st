.aside
  padding-bottom: 20px

  &__radio
    width: 100%
    display: flex

    .radio-group
      width: 100%

    .radio
      width: 50%

    .button
      width: 100%

  &__groups
    position: relative
    min-height: 100px

  &__spin
    position: absolute
    left: 0
    top: 0
    right: 0
    bottom: 0
    width: 32px
    height: 32px
    margin: auto

  &__group
    display: none

    &_current
      display: block

  &__menu
    margin: 12px 2px 12px 0

  &__brand
    text-align: center
    margin-top: 10px
    margin-bottom: 25px
