.input

  &_search-results
    display: block
    background-color: white
    border: 1px solid lightgrey
    border-radius: 3px

  &_search-results &__box
    display: block

  &_search-results &__control
    box-sizing: border-box
    width: 100%
    padding: 12px 12px 12px 50px
    background: url('bg.svg') 12px 50% no-repeat
    border: 0
    color: #828077
    font-size: 18px
    line-height: 21px
    outline: none

  &_search-results&_size_big
    border-radius: 0

  &_search-results&_size_big &__control
    font-size: 28px
    line-height: 34px
    padding: 12px 48px 12px 78px
    background-image: url('bg-big.svg')
    background-position-x: 26px
